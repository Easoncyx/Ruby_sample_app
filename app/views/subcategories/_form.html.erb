<%= form_for(@subcategory) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  
  <%= f.label :weight %>
  
  <%= f.text_field :weight, class: 'form-control' %>

  <%= f.label :subcategory %>
  
  <%= f.select :category_id, @categories, class: 'form-control'%>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>