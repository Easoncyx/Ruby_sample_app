<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= gravatar_for @user %></h1>
    </section>
    <h1>User Name: </h1>
    <h2><%= @user.name %></h2>
    <h1>User Login_id: </h1>
    <h2><%= @user.login_id %></h2>
    <h1>User Role: </h1>
    <h2><%= @user.role %></h2>
  </aside>
  <div class="col-md-8">
    <% if @user.scenarios.any? and (@user.role == "Administrator" or @user.role == "Decision Maker")%>
      <h3>Scenarios (<%= @user.scenarios.count %>)</h3>
      <ol class="scenarios">
        <%= render @scenarios %>
      </ol>
      <%= will_paginate @scenarios %>
    <% end %>
  </div>
</div>
