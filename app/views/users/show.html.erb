<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.scenarios.any? and (@user.role == "Administrator" or @user.role == "Decision Maker")%>
      <h3>Scenarios (<%= @user.scenarios.count %>)</h3>
      <ol class="scenarios">
        <%= render @scenarios %>
      </ol>
      <%= will_paginate @scenarios %>
    <% end %>
  </div>
</div>
