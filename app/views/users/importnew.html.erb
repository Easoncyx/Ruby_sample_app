<% if admin? %>
  <% provide(:title, 'Invite') %>
  <% provide(:button_text, 'Invite') %>
  <h1> Import Company</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @user, url:{action: "import"} do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :parent_login_id, 'Parent Company Login ID' %>
        <%= f.text_field :parent_login_id, class: 'form-control' %>

        <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>

<% end %>
