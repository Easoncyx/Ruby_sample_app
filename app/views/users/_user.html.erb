<tr>
  <td><%= gravatar_for user, size: 50 %></td>
  <td><%= link_to user.name, user %></td>
  <td><%= user.login_id %></td>
  <td><%= user.email %></td>
  <td><%= user.role %></td>
  <% if admin? && !current_user?(user) %>
    <td>
      <%= button_to "Delete", user, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
    <% if !user.activated %>
      <td>
        <%= button_to "Activate", activate_url(), params:{login_id: user.login_id}, method: :get %>
     </td>
    <% else %>
      <td>
        Activated
      </td>
    <% end %>
  <% end %>

</tr>
