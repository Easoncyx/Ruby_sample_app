<%= form_for @answer do |f| %>

  <%= f.label :level %>
  <%= f.select :level, @levels, class: 'form-control'%>
  
  
  <%= f.hidden_field :question_id, :value => @answer.question_id %>
  <%= f.hidden_field :company_id, :value => @answer.company_id %>
  <%= f.hidden_field :validated, :value => false %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  
<% end %>