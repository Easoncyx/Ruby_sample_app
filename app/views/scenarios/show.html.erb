<% provide(:title, 'All Scenarios') %>



<ul class="scenarios">
 
  <li id="scenario-<%= @scenario.id %>">
      <span class="name"><%= @scenario.name %></span>
      <span class="description"><%= @scenario.description %></span>
      <span class="timestamp">
        Posted <%= time_ago_in_words(@scenario.created_at) %> ago.
      </span>
  
  </li>
  <% if @dms.any? %>
    <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Gravatar</th>
        <th scope="col">Name</th>
        <th scope="col">Login_id</th>
        <th scope="col">Email</th>
      </tr>
    </thead>
      <tbody>
        <ul class="dms">
          <% @dms.each do |dm| %>
            <tr>
              <td><%= gravatar_for dm, size: 50 %></td>
              <td><%= dm.name %></td>
              <td><%= dm.login_id %></td>
              <td><%= dm.email %></td>
            </tr>
          <% end %>
        </ul>
      </tbody>
    </table>
  <% end %>
  
</ul>