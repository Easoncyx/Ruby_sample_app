<% provide(:title, 'All Scenarios') %>

<ul class="scenarios">

  <section>
    <h3>Name: </h3>
    <h4><%= @scenario.name %></h4>
    <h3>Description: </h3>
    <h4><%= @scenario.description %></h4>
  </section>

  <% if @dms.any? %>
    <h1>Related decision makers</h1>
    <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Gravatar</th>
        <th scope="col">Name</th>
        <th scope="col">Login_id</th>
        <th scope="col">Email</th>
      </tr>
    </thead>
      <tbody>
        <ul class="dms">
          <% @dms.each do |dm| %>
            <tr>
              <td><%= gravatar_for dm, size: 50 %></td>
              <td><%= dm.name %></td>
              <td><%= dm.login_id %></td>
              <td><%= dm.email %></td>
            </tr>
          <% end %>
        </ul>
      </tbody>
    </table>
  <% end %>
</ul>

<section>
<h1>Scenario Weight for each company</h1>
  <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Company Login id</th>
      <th scope="col">Company Name</th>
      <th scope="col">Company Score</th>
      <th scope="col">Weight</th>
    </tr>
  </thead>
    <tbody>
      <ul class="scenario_weight">
        <% @scenario_weight.each_with_index do |sw, index| %>
          <tr>
            <td><%= @companies_loginid[index] %></td>
            <td><%= @companies_name[index] %></td>
            <td><%= @companies[index].score %></td>
            <td><%= sw.weight %></td>
          </tr>
        <% end %>
      </ul>
    </tbody>
  </table>
</section>
