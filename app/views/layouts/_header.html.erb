<header class="navbar navbar-fixed-top navbar-inverse" style="background-color:  #500000;">
  <div class="container">
    <% if logged_in?%>
      <a id="logo" href="/">ROLE : <%= current_user.role %></a>
    <% else %>
      <%= link_to "RISK ASSESSMENT TOOL", root_path, id: "logo" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right" >
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>

        <% if logged_in? %>
          <% if admin? %>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Questions", questions_path %></li>
            <li><%= link_to "Scales", scales_path %></li>
            <li><%= link_to "Scenarios", scenarios_path %></li>
            <li><%= link_to "Outputs", outputs_path %></li>
            <li><%= link_to "Invite", new_user_path %></li>
          <% elsif decision_maker? %>
            <li><%= link_to "Questions", questions_path %></li>
            <li><%= link_to "Scenarios", scenarios_path %></li>
            <li><%= link_to "Outputs", outputs_path %></li>
          <% elsif validator? %>
            <li><%= link_to "Scales", scales_path %></li>
            <li><%= link_to "Companies", companies_path %></li>
          <% else %>
            <li><%= link_to "Scales", scales_path %></li>
            <li><%= link_to "Questionnaires", answers_path %></li>
            <li><%= link_to "Invite", new_user_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
