<header class="navbar navbar-fixed-top navbar-inverse" style="background-color:  #500000;">
  <div class="container">
    <% if logged_in?%>
      <a id="logo" href="/">ROLE : <%= current_user.role %></a>
    <% else %>
      <%= link_to "RISK ASSESSMENT TOOL", root_path, id: "logo" %>
    <% end %>
    <nav>
      <button class="navbar-toggle collapsed" id="menu-icon"></button>
      <ul class="nav navbar-nav navbar-right collapse-nav-ul-custom" >
        <li class="collapse-nav-li-custom"><%= link_to "Home", root_path %></li>
        <li class="collapse-nav-li-custom"><%= link_to "Help", help_path %></li>

        <% if logged_in? %>
          <% if admin? %>
            <li class="collapse-nav-li-custom"><%= link_to "Users", users_path %></li>
            <li class="collapse-nav-li-custom"><%= link_to "Questions", questions_path %></li>
            <li class="collapse-nav-li-custom"><%= link_to "Scales", scales_path %></li>
            <li class="collapse-nav-li-custom"><%= link_to "Scenarios", scenarios_path %></li>
            <li class="collapse-nav-li-custom"><%= link_to "Outputs", outputs_path %></li>
            <li class="collapse-nav-li-custom"><%= link_to "Invite", new_user_path %></li>
          <% elsif decision_maker? %>
            <li class="collapse-nav-li-custom"><%= link_to "Questions", questions_path %></li>
            <li class="collapse-nav-li-custom"><%= link_to "Scenarios", scenarios_path %></li>
            <li class="collapse-nav-li-custom"><%= link_to "Outputs", outputs_path %></li>
          <% elsif validator? %>
            <li class="collapse-nav-li-custom"><%= link_to "Scales", scales_path %></li>
            <li  class="collapse-nav-li-custom"><%= link_to "Companies", companies_path %></li>
          <% else %>
            <li  class="collapse-nav-li-custom"><%= link_to "Scales", scales_path %></li>
            <li  class="collapse-nav-li-custom"><%= link_to "Questionnaires", answers_path %></li>
            <li  class="collapse-nav-li-custom"><%= link_to "Invite", new_user_path %></li>
          <% end %>
          <li class="dropdown collapse-nav-li-custom"  id= "account_link">
            <a href="response-list" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
    <div>
    
    </div>
  </div>
  
</header>
<script>
  $("#menu-icon").click(function () {
      
      if($(".collapse-nav-ul-custom").css("display")=="none")
        $(".collapse-nav-ul-custom").css("display", "block");
      else
        $(".collapse-nav-ul-custom").css("display", "none");
  })
  $(window).resize(function () {   
    if($(window).width() > 1200){
      $(".collapse-nav-ul-custom").css("display","block");
    }
    else {
      $(".collapse-nav-ul-custom").css("display", "none");
    }
  });
  
</script>